# Loging Configuration (debug, info, warn, error)
LOG_LEVEL=info
LOG_LEVEL_KAFKA=info
LOG_LEVEL_JOB_PROCESSOR=info

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:19092
KAFKA_CONSUMER_GROUP=tradeguard-health
KAFKA_JOBS_TOPIC=job_events
KAFKA_RISK_TOPIC=health_reports

# API Configuration
API_BASE_URL=http://localhost:8080/api
API_USER_LIMITS_PATH=/users/{user_id}/limits

# Dashboard Configuration
ENABLE_WEB_DASHBOARD=true
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=42069
DASHBOARD_REFRESH_RATE=1